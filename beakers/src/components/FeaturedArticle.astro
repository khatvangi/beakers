---
interface Props {
	title: string;
	excerpt: string;
	author: string;
	date: string;
	readingTime: string;
	image: string;
}

const { title, excerpt, author, date, readingTime, image } = Astro.props;
---
<section class="featured-article">
	<div class="image-container">
		<img src={image} alt={title} />
	</div>
	<div class="content">
		<h2>{title}</h2>
		<p class="excerpt">{excerpt}</p>
		<div class="meta">
			<span class="author">{author}</span>
			<span class="date">{date}</span>
			<span class="reading-time">{readingTime}</span>
		</div>
		<a href="#" class="read-more">Read More</a>
	</div>
</section>

<style>
	.featured-article {
		display: flex;
		background-color: var(--color-background-alt);
		border-radius: 8px;
		overflow: hidden;
		margin-bottom: 2rem;
	}
	.image-container {
		flex: 1;
		max-width: 50%;
	}
	.image-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	.content {
		flex: 1;
		padding: 2rem;
	}
	h2 {
		font-size: 2rem;
		margin-bottom: 1rem;
	}
	.excerpt {
		font-size: 1.1rem;
		margin-bottom: 1rem;
	}
	.meta {
		font-size: 0.9rem;
		color: #666;
		margin-bottom: 1rem;
	}
	.meta span:not(:last-child)::after {
		content: "â€¢";
		margin: 0 0.5rem;
	}
	.read-more {
		display: inline-block;
		background-color: var(--color-secondary);
		color: var(--color-text-light);
		padding: 0.5rem 1rem;
		border-radius: 4px;
		text-decoration: none;
	}
</style>